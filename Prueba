<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cat Gallery</title>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      overflow: hidden;
    }

    #container {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</head>
<body>
  <div id="container"></div>

  <script>
    function getRandomCatUrl() {
      const catId = Math.floor(Math.random() * 1000); // Generar un ID de gato aleatorio
      return `https://cataas.com/cat/${catId}`; // Construir la URL de la imagen del gato
    }

    function createCat() {
      const cat = document.createElement('img');
      cat.src = getRandomCatUrl(); // Obtener una URL de imagen de gato aleatoria
      cat.style.position = 'absolute';
      cat.style.left = Math.random() * (window.innerWidth - 100) + 'px';
      cat.style.top = Math.random() * (window.innerHeight - 100) + 'px';
      cat.style.width = '100px'; // Ajusta el tamaño de la imagen según sea necesario
      cat.style.height = 'auto';
      cat.style.transition = 'transform 3s linear';
      document.getElementById('container').appendChild(cat);

      // Mover el gato aleatoriamente
      setInterval(() => {
        const x = Math.random() * (window.innerWidth - 100);
        const y = Math.random() * (window.innerHeight - 100);
        cat.style.transform = `translate(${x}px, ${y}px)`;
      }, 3000);
    }

    // Crear gatos cada segundo
    setInterval(createCat, 1000);
  </script>
</body>
</html>
