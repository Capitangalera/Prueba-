const catImages = [
  'https://cdn2.thecatapi.com/images/bj5.jpg',
  'https://cdn2.thecatapi.com/images/MTg4ODAzNQ.jpg',
  'https://cdn2.thecatapi.com/images/c0t.jpg',
  'https://cdn2.thecatapi.com/images/d2o.jpg',
  // Añade más URLs de imágenes de gatos reales aquí
];

function createCat() {
  const cat = document.createElement('img');
  cat.src = catImages[Math.floor(Math.random() * catImages.length)];
  cat.style.position = 'absolute';
  cat.style.left = Math.random() * window.innerWidth + 'px';
  cat.style.top = Math.random() * window.innerHeight + 'px';
  cat.style.width = '100px'; // Ajusta el tamaño de la imagen según sea necesario
  cat.style.height = 'auto';
  cat.style.transition = 'transform 3s linear';
  document.getElementById('container').appendChild(cat);

  // Mover el gato aleatoriamente
  setInterval(() => {
    const x = Math.random() * window.innerWidth;
    const y = Math.random() * window.innerHeight;
    cat.style.transform = `translate(${x}px, ${y}px)`;
  }, 3000);
}

// Crear gatos cada segundo
setInterval(createCat, 1000);
