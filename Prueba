<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Click the Image</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    img {
      max-width: 100%;
      height: auto;
      cursor: pointer;
      -webkit-tap-highlight-color: transparent; /* Evita el resaltado azul al hacer clic en iOS */
    }
  </style>
</head>
<body>
  <img id="image" src="" alt="Image" onclick="changeImage()">
  
  <script>
    let currentIndex = 0;
    let images = [];

    async function fetchImages() {
      try {
        const response = await fetch('https://api.thecatapi.com/v1/images/search?limit=5'); // Obtener 5 im치genes de gatos
        const catData = await response.json();
        images.push(...catData.map(cat => cat.url));
      } catch (error) {
        console.error('Error fetching cat images:', error);
      }

      try {
        const response = await fetch('https://picsum.photos/v2/list?page=2&limit=5'); // Obtener 5 im치genes aleatorias
        const data = await response.json();
        images.push(...data.map(image => image.download_url));
      } catch (error) {
        console.error('Error fetching images:', error);
      }
    }

    function changeImage() {
      if (images.length === 0) {
        console.log('No images available. Fetching images...');
        fetchImages().then(() => changeImage());
        return;
      }

      const imageElement = document.getElementById('image');
      currentIndex = (currentIndex + 1) % images.length;
      imageElement.src = images[currentIndex];
    }

    // Cargar las im치genes al cargar la p치gina por primera vez
    fetchImages();
  </script>
</body>
</html>
