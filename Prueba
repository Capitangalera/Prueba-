<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Click the Cat</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    img {
      max-width: 100%;
      height: auto;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <img id="catImage" src="https://cdn2.thecatapi.com/images/bj5.jpg" alt="Cat Image" onclick="changeCatImage()">
  
  <script>
    let currentIndex = 0;
    let catImages = [];

    async function fetchCatImages() {
      const response = await fetch('https://api.thecatapi.com/v1/images/search?limit=50'); // Obtener 50 imágenes de gatos
      const data = await response.json();
      catImages = data.map(cat => cat.url);
    }

    async function changeCatImage() {
      if (catImages.length === 0) {
        await fetchCatImages();
      }

      const catImage = document.getElementById('catImage');
      currentIndex = (currentIndex + 1) % catImages.length; // Incrementar índice, volver a 0 si alcanza el final
      catImage.src = catImages[currentIndex];
    }

    // Cargar las imágenes de gatos al cargar la página por primera vez
    fetchCatImages();
  </script>
</body>
</html>
